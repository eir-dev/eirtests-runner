# EirTests Runner Configuration
# Copy this file to .env and fill in your values

# ===== EirTests API Settings =====
# Your EirTests API key (get this from EirTests dashboard)
EIRTESTS_API_KEY=your-api-key-here

# Site ID to fetch tests for (get this from EirTests dashboard)
EIRTESTS_SITE_ID=your-site-id-here

# EirTests API URL (default: http://localhost:3000)
# For production, use: https://api.eirtests.com
EIRTESTS_API_URL=http://localhost:3000


# ===== Test Execution Settings =====
# Number of test retries on failure (default: 2)
EIRTESTS_RETRIES=2

# Run tests in parallel (default: true)
EIRTESTS_PARALLEL=true

# Report results back to EirTests (default: false)
EIRTESTS_REPORT_RESULTS=false


# ===== Test Secrets =====
# All variables starting with TEST_ are available to your tests
# Base URL for tests
BASE_URL=https://staging.yoursite.com

# Login credentials
TEST_LOGIN_USERNAME=test@example.com
TEST_LOGIN_PASSWORD=changeme

# API keys
TEST_API_KEY=your-test-api-key


# ===== HashiCorp Vault (Phase 2) =====
# VAULT_URL=https://vault.internal
# VAULT_TOKEN=your-vault-token
