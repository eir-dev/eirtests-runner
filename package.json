{
  "name": "eirtests-runner",
  "version": "1.0.0",
  "description": "On-premise test execution agent for EirTests - Fetches and runs tests from EirTests SaaS on your infrastructure",
  "main": "dist/index.js",
  "bin": {
    "eirtests": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "execute": "npm run build && node dist/index.js run",
    "test": "npm run execute",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "playwright",
    "testing",
    "e2e",
    "on-premise",
    "eirtests",
    "runner",
    "agent"
  ],
  "author": "EirTests",
  "license": "MIT",
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "dotenv": "^16.3.1",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/node-fetch": "^2.6.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
